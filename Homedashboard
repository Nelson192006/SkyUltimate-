<script>
/* ========= CONFIG ========= */
const LOGO_URL = "https://raw.githubusercontent.com/Nelson192006/SkyUltimate-/main/logo.png";

/* Set this to your single API base (same endpoint for all config).
   The page will GET `${API_BASE}/config` to pull all editable info. */
const API_BASE = "https://your-backend.example.com"; // <-- UPDATE THIS

/* Expected /config JSON (plain text OK; just return JSON):
{
  "slogan": "Taking Delivery To New Heights",
  "mission": " ... ",
  "vision": " ... ",
  "founderName": "Your Name",
  "founderYear": "2024",
  "phone": "09128884830",
  "whatsapp": "2349128884830",
  "instagram": "https://instagram.com/yourhandle",
  "facebook": "https://facebook.com/yourpage",
  "heroLead": "Ultra-fast pickups and deliveries..."
} */

/* ========= SPLASH (always show on load) ========= */
const splash = document.getElementById('splash');
function hideSplashAfter(ms){
  setTimeout(()=>{ splash.style.display='none'; }, ms);
}
// Keep it visible long enough for the logo anim; you can tweak:
hideSplashAfter(1400);

/* ========= TOPBAR WELCOME =========
   Try to greet by first name if present (e.g., saved during auth elsewhere) */
(function setWelcome(){
  const welcome = document.getElementById('welcome');
  try{
    const raw = localStorage.getItem('sky_current_user');
    let name = 'Welcome';
    if(raw){
      const u = JSON.parse(raw);
      if(u && u.name){
        const first = String(u.name).trim().split(/\s+/)[0];
        name = `Welcome, ${first}`;
      }
    }
    welcome.textContent = name;
  }catch(e){
    welcome.textContent = 'Welcome';
  }
})();

/* ========= SIDEBAR TOGGLE / DISMISS ========= */
const sidebar = document.getElementById('sidebar');
const backdrop = document.getElementById('backdrop');
const btnMenu = document.getElementById('btnMenu');

function openSidebar(){
  sidebar.classList.add('open');
  backdrop.classList.add('show');
}
function closeSidebar(){
  sidebar.classList.remove('open');
  backdrop.classList.remove('show');
}

btnMenu.addEventListener('click', openSidebar);
backdrop.addEventListener('click', closeSidebar);
document.addEventListener('keydown', (e)=>{ if(e.key === 'Escape') closeSidebar(); });

/* ========= FAQ ACCORDION ========= */
document.querySelectorAll('.faq-q').forEach(btn=>{
  btn.addEventListener('click', ()=>{
    const item = btn.closest('.faq-item');
    item.classList.toggle('open');
  });
});

/* ========= LINKS / CHIPS (defaults + API override) ========= */
const elMission = document.getElementById('mission');
const elVision = document.getElementById('vision');
const elFounderName = document.getElementById('founderName');
const elFounderYear = document.getElementById('founderYear');
const elHeroLead = document.getElementById('heroLead');
const elSloganTop = document.querySelector('.slogan');

const linkInstagram = document.getElementById('linkInstagram');
const linkFacebook  = document.getElementById('linkFacebook');
const linkWhatsApp  = document.getElementById('linkWhatsApp');

const chipIG = document.getElementById('chipIG');
const chipFB = document.getElementById('chipFB');
const chipWA = document.getElementById('chipWA');
const chipPhone = document.getElementById('chipPhone');

/* Defaults (in case API not reachable) */
let cfg = {
  slogan: "Taking Delivery To New Heights",
  mission: "Deliver peace of mind with every parcel‚Äîspeed, safety, and delight.",
  vision: "Be the most trusted last-mile partner across Africa and beyond.",
  founderName: "‚Äî",
  founderYear: "‚Äî",
  phone: "09128884830",
  whatsapp: "2349128884830",
  instagram: "",
  facebook: "",
  heroLead: "Ultra-fast pickups and deliveries with real-time care."
};

/* Apply config to DOM */
function applyConfig(){
  elMission.textContent = cfg.mission || elMission.textContent;
  elVision.textContent  = cfg.vision  || elVision.textContent;
  elFounderName.textContent = cfg.founderName || "‚Äî";
  elFounderYear.textContent = cfg.founderYear || "‚Äî";
  elHeroLead.textContent = cfg.heroLead || elHeroLead.textContent;

  if(cfg.slogan){ elSloganTop.textContent = cfg.slogan; }

  /* Phone + WhatsApp chips */
  if(cfg.phone){
    chipPhone.href = `tel:${cfg.phone}`;
    chipPhone.querySelector('strong').textContent = cfg.phone;
  }
  if(cfg.whatsapp){
    // Ensure it‚Äôs digits only with country code (e.g., 234...)
    const wa = String(cfg.whatsapp).replace(/[^\d]/g,'');
    chipWA.href = `https://wa.me/${wa}`;
    linkWhatsApp.href = chipWA.href;
  }

  /* Socials */
  if(cfg.instagram){
    linkInstagram.href = cfg.instagram; chipIG.href = cfg.instagram;
  }
  if(cfg.facebook){
    linkFacebook.href = cfg.facebook; chipFB.href = cfg.facebook;
  }
}

/* Fetch config from one endpoint */
async function fetchConfig(){
  try{
    const res = await fetch(`${API_BASE}/config`, { cache:'no-store' });
    if(!res.ok) throw new Error('Bad response');
    const data = await res.json();
    cfg = { ...cfg, ...(data||{}) };
    applyConfig();
  }catch(err){
    // If the API isn't ready yet, silently keep defaults
    applyConfig();
    // console.warn('Config fetch failed:', err);
  }
}
fetchConfig();

/* ========= DISABLE ‚ÄúRate the App‚Äù ========= */
document.querySelectorAll('.nav .disabled').forEach(btn=>{
  btn.addEventListener('click', (e)=>{
    e.preventDefault();
    // Optionally show a gentle toast/alert:
    alert('App rating will be available after Play Store launch. Stay tuned!');
  });
});

/* ========= Basic in-page nav behavior ========= */
document.getElementById('nav-home').addEventListener('click', (e)=>{
  e.preventDefault();
  window.scrollTo({ top:0, behavior:'smooth' });
  closeSidebar();
});
document.querySelectorAll('a[href^="#"]').forEach(a=>{
  a.addEventListener('click', (e)=>{
    const id = a.getAttribute('href').slice(1);
    if(!id) return;
    const tgt = document.getElementById(id);
    if(tgt){
      e.preventDefault();
      tgt.scrollIntoView({ behavior:'smooth', block:'start' });
      closeSidebar();
    }
  });
});
</script>
